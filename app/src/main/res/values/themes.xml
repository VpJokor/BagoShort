    <!--  主页底部导航字体样式  -->
    <style name="Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_black_200</item>
    </style>
    <!--  主页底部导航字体样式  -->
    <style name="Inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/color_brown</item>
    </style>


    <!--  ShapleImageView样式 - 圆角  -->
    <style name="CircleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--  ShapleImageView样式 - 圆角 10DP  -->
    <style name="CircleStyle10DP">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!--  ShapleImageView样式 - 圆角 4DP  -->
    <style name="CircleStyle4DP">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!--  底部弹框动画  -->
    <style name="MyPopWindowAnim">
        <item name="android:windowEnterAnimation">@anim/enter_anim</item>
        <item name="android:windowExitAnimation">@anim/out_anim</item>
    </style>
</resources>